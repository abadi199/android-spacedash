<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:state_checked="false" android:state_pressed="true" android:drawable="@drawable/vibrate_off_pressed" /> <!-- pressed -->
	<item android:state_checked="false" android:state_focused="true" android:drawable="@drawable/vibrate_off_focused" /> <!-- focused -->
	<item android:state_checked="false" android:drawable="@drawable/vibrate_off_normal" /> <!-- default -->
	<item android:state_checked="true" android:state_pressed="true" android:drawable="@drawable/vibrate_on_pressed" /> <!-- pressed -->
	<item android:state_checked="true" android:state_focused="true" android:drawable="@drawable/vibrate_on_focused" /> <!-- focused -->
	<item android:drawable="@drawable/vibrate_on_normal" /> <!-- default -->
</selector>
